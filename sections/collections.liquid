{% comment %}
  Collections List Page Section - سنتر عمو نادر
  Display all collections in a wide card format
{% endcomment %}

{{ 'ammo-collection-list.css' | asset_url | stylesheet_tag }}

<section class="ammo-section ammo-collections">
  <div class="ammo-collections__container">
    {%- comment -%} Header {%- endcomment -%}
    <div class="ammo-collections__header">
      <span class="ammo-collections__badge">{{ section.settings.badge_text | default: 'تصفح' }}</span>
      <h1 class="ammo-collections__title">
        {{ section.settings.heading | default: 'تصفح الأقسام' }}
      </h1>
      <p class="ammo-collections__subtitle">
        {{ section.settings.subtitle | default: 'اكتشف مجموعاتنا المتنوعة من ملابس القطن المنزلية' }}
      </p>
    </div>

    {%- comment -%} Collections Grid {%- endcomment -%}
    <div class="ammo-collections__grid">
      {%- if section.blocks.size > 0 -%}
        {%- comment -%} Manual collection selection {%- endcomment -%}
        {%- for block in section.blocks -%}
          {%- if block.settings.collection != blank -%}
            {% render 'collection-card',
              collection: block.settings.collection,
              index: forloop.index,
              show_count: section.settings.show_count
            %}
          {%- endif -%}
        {%- endfor -%}
      {%- else -%}
        {%- comment -%} Show all collections {%- endcomment -%}
        {%- for collection in collections -%}
          {%- if collection.products_count > 0 and collection.handle != 'all' -%}
            {% render 'collection-card',
              collection: collection,
              index: forloop.index,
              show_count: section.settings.show_count
            %}
          {%- endif -%}
        {%- endfor -%}
      {%- endif -%}
    </div>

    {%- comment -%} Empty State {%- endcomment -%}
    {%- if collections.size == 0 -%}
      <div class="ammo-collections__empty">
        <div class="ammo-collections__empty-icon">
          {% render 'ammonader-icons', icon: 'grid' %}
        </div>
        <h2>لا توجد مجموعات</h2>
        <p>لم يتم إنشاء أي مجموعات بعد</p>
      </div>
    {%- endif -%}
  </div>
</section>

{% schema %}
{
  "name": "قائمة الأقسام - عمو نادر",
  "tag": "section",
  "class": "ammo-collections-section",
  "settings": [
    {
      "type": "text",
      "id": "badge_text",
      "label": "نص الشارة",
      "default": "تصفح"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "العنوان الرئيسي",
      "default": "تصفح الأقسام"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "النص الفرعي",
      "default": "اكتشف مجموعاتنا المتنوعة من ملابس القطن المنزلية"
    },
    {
      "type": "checkbox",
      "id": "show_count",
      "label": "إظهار عدد المنتجات",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "مجموعة",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "اختر المجموعة"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "قائمة الأقسام - عمو نادر"
    }
  ]
}
{% endschema %}
