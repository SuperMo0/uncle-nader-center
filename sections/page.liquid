{% comment %}
  This section is used in the page template to render store pages like About us
  or Contact us.

  It focuses on readability with a constrained width and improved typography.
{% endcomment %}

<div class="page section-{{ section.id }}-padding">
  <div class="page__container">
    <h1 class="page-title">
      {% if section.settings.title != blank %}
        {{ section.settings.title | escape }}
      {% else %}
        {{ page.title | escape }}
      {% endif %}
    </h1>

    <div class="page-content rte">
      {% if section.settings.content != blank %}
        {{ section.settings.content }}
      {% else %}
        {{ page.content }}
      {% endif %}
    </div>
  </div>
</div>

{% stylesheet %}
  .page {
    padding-block: 4rem;
    background-color: var(--color-background);
  }

  .page__container {
    max-width: 800px;
    margin-inline: auto;
    padding-inline: 1.5rem;
  }

  .page-title {
    color: var(--ammo-dark, #000);
    margin-bottom: 3rem;
    text-align: center;
    font-size: 2.5rem;
    font-weight: 800;
    position: relative;
    line-height: 1.2;
  }

  /* Decorative underline */
  .page-title::after {
    content: '';
    display: block;
    width: 60px;
    height: 4px;
    background: var(--ammo-warm, #f4a261);
    margin: 1rem auto 0;
    border-radius: 2px;
  }

  /* Rich Text Editor Styles */
  .page-content {
    font-size: 1.125rem; /* ~18px for better readability */
    line-height: 1.8;
    color: var(--color-foreground, #333);
  }

  .page-content p {
    margin-bottom: 1.5rem;
  }

  .page-content h2,
  .page-content h3,
  .page-content h4 {
    color: var(--ammo-primary, #264653);
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    font-weight: 700;
    line-height: 1.3;
  }

  .page-content h2 {
    font-size: 1.75rem;
  }
  .page-content h3 {
    font-size: 1.5rem;
  }

  .page-content ul,
  .page-content ol {
    margin-bottom: 1.5rem;
    padding-inline-start: 1.5rem;
  }

  .page-content li {
    margin-bottom: 0.5rem;
  }

  .page-content a {
    color: var(--ammo-primary, #264653);
    text-decoration: underline;
    text-underline-offset: 3px;
    transition: color 0.2s ease;
  }

  .page-content a:hover {
    color: var(--ammo-primary-dark, #000);
  }

  .page-content img {
    max-width: 100%;
    height: auto;
    border-radius: 0.75rem;
    margin-block: 1.5rem;
  }

  @media screen and (max-width: 749px) {
    .page {
      padding-block: 3rem;
    }
    .page-title {
      font-size: 2rem;
      margin-bottom: 2rem;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "صفحة",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "label": "عنوان الصفحة ",
      "id": "title"
    },
    {
      "type": "richtext",
      "label": "المحتوى",
      "id": "content"
    }
  ]
}
{% endschema %}
