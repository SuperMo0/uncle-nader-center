{{ 'footer.css' | asset_url | stylesheet_tag }}

<footer class="ammo-footer">
  <div class="ammo-footer__container">
    <div class="ammo-footer__grid">
      <!-- Brand Column -->
      <div class="ammo-footer__brand">
        <div class="ammo-footer__logo">
          <div class="ammo-footer__logo-text">
            <h3>{{ section.settings.store_name }}</h3>
            <p>{{ section.settings.store_tagline }}</p>
          </div>
          <div class="ammo-footer__logo-icon">{{ section.settings.logo_letter }}</div>
        </div>

        {%- if section.settings.description != blank -%}
          <p class="ammo-footer__description">{{ section.settings.description }}</p>
        {%- endif -%}

        <div class="ammo-footer__social">
          {%- if section.settings.social_twitter != blank -%}
            <a href="{{ section.settings.social_twitter }}" class="ammo-footer__social-link" aria-label="Twitter">
              {% render 'ammonader-icons', icon: 'twitter' %}
            </a>
          {%- endif -%}
          {%- if section.settings.social_instagram != blank -%}
            <a href="{{ section.settings.social_instagram }}" class="ammo-footer__social-link" aria-label="Instagram">
              {% render 'ammonader-icons', icon: 'instagram' %}
            </a>
          {%- endif -%}
          {%- if section.settings.social_facebook != blank -%}
            <a href="{{ section.settings.social_facebook }}" class="ammo-footer__social-link" aria-label="Facebook">
              {% render 'ammonader-icons', icon: 'facebook' %}
            </a>
          {%- endif -%}
        </div>
      </div>

      <!-- Quick Links -->
      {%- for block in section.blocks -%}
        {%- if block.type == 'link_list' -%}
          <div class="ammo-footer__column" {{ block.shopify_attributes }}>
            <h4 class="ammo-footer__heading">{{ block.settings.heading }}</h4>
            {%- if block.settings.menu != blank -%}
              <ul class="ammo-footer__links">
                {%- for link in block.settings.menu.links -%}
                  <li>
                    <a href="{{ link.url }}">{{ link.title }}</a>
                  </li>
                {%- endfor -%}
              </ul>
            {%- endif -%}
          </div>
        {%- endif -%}

        {%- if block.type == 'contact' -%}
          <div class="ammo-footer__column" {{ block.shopify_attributes }}>
            <h4 class="ammo-footer__heading">{{ block.settings.heading }}</h4>

            {%- if block.settings.phone != blank -%}
              <div class="ammo-footer__contact-item">
                <span>{{ block.settings.phone }}</span>
                {% render 'ammonader-icons', icon: 'phone' %}
              </div>
            {%- endif -%}

            {%- if block.settings.email != blank -%}
              <div class="ammo-footer__contact-item">
                <span>{{ block.settings.email }}</span>
                {% render 'ammonader-icons', icon: 'mail' %}
              </div>
            {%- endif -%}

            {%- if block.settings.address != blank -%}
              <div class="ammo-footer__contact-item">
                <span>{{ block.settings.address }}</span>
                {% render 'ammonader-icons', icon: 'map-pin' %}
              </div>
            {%- endif -%}
          </div>
        {%- endif -%}
      {%- endfor -%}
    </div>

    <!-- Bottom -->
    <div class="ammo-footer__bottom">
      <p class="ammo-footer__copyright">{{ section.settings.copyright_text }}</p>
    </div>
  </div>
</footer>

