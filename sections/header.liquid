<header class="site-header">
  <div class="page-width header__content">
    <!-- Mobile Menu Toggle -->
    <details class="mobile-menu-disclosure">
      <summary class="header__icon header__icon--menu" aria-label="Menu">
        <span class="header__icon--open">{% render 'ammonader-icons', icon: 'menu' %}</span>
        <span class="header__icon--close">{% render 'ammonader-icons', icon: 'close' %}</span>
      </summary>

      <div class="mobile-menu-overlay"></div>

      <nav class="mobile-menu-container">
        <div class="mobile-menu__header">
          <span class="mobile-menu__title">القائمة</span>
          <button class="mobile-menu__close" onclick="this.closest('details').removeAttribute('open')">
            {% render 'ammonader-icons', icon: 'close' %}
          </button>
        </div>

        <ul class="mobile-menu__list">
          {% for link in section.settings.menu.links %}
            <li>
              <a
                href="{{ link.url }}"
                class="mobile-menu__link {% if link.active or link.child_active %}mobile-menu__link--active{% endif %}"
              >
                {{ link.title }}
              </a>
            </li>
          {% endfor %}
        </ul>

        <div class="mobile-menu__utilities">
          <a href="{{ routes.search_url }}" class="mobile-menu__utility-link">
            {{ 'icon-search.svg' | inline_asset_content }}
            <span>بحث</span>
          </a>
          {% if shop.customer_accounts_enabled %}
            <a href="{{ routes.account_url }}" class="mobile-menu__utility-link">
              {{ 'icon-account.svg' | inline_asset_content }}
              <span>حسابي</span>
            </a>
          {% endif %}
        </div>
      </nav>
    </details>

    <!-- Logo -->
    <div class="header__logo">
      <h1 class="header__title">
        <a href="{{ routes.root_url }}">{{ shop.name }}</a>
      </h1>
      {% if section.settings.slogan != blank %}
        <p class="header__slogan mobile-hidden">{{ section.settings.slogan }}</p>
      {% endif %}
    </div>

    <!-- Desktop Menu -->
    <nav class="header__menu desktop-only">
      <ul class="header__menu-list">
        {% for link in section.settings.menu.links %}
          <li>
            <a
              href="{{ link.url }}"
              class="header__menu-item {% if link.active or link.child_active %}header__menu-item--active{% endif %}"
            >
              {{ link.title }}
            </a>
          </li>
        {% endfor %}
      </ul>
    </nav>
    <!-- Icons -->
    <div class="header__icons">
      <div class="desktop-only header__icons-group">
        <a
          href="{{ routes.search_url }}"
          class="header__icon {% if request.page_type == 'search' %}header__icon--active{% endif %}"
        >
          {{ 'icon-search.svg' | inline_asset_content }}
        </a>
        {% if shop.customer_accounts_enabled %}
          <a href="{{ routes.account_url }}" class="header__icon">
            {{ 'icon-account.svg' | inline_asset_content }}
          </a>
        {% endif %}
      </div>

      <a
        href="{{ routes.cart_url }}"
        class="header__icon header__icon--cart {% if request.page_type == 'cart' %}header__icon--active{% endif %}"
        id="cart-icon-bubble"
      >
        {{ 'icon-cart.svg' | inline_asset_content }}
        <div class="cart-count-bubble">
          <span class="cart-count" aria-label="cart items count">{{ cart.item_count }}</span>
        </div>
      </a>
    </div>
  </div>
</header>
{% schema %}
{
  "name": "header",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "menu"
    },
    {
      "type": "text",
      "id": "slogan",
      "label": "slogan",
      "default": "للملابس القطنية المنزلية"
    }
  ]
}
{% endschema %}
